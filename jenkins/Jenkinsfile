pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.0'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'maven:3.9.0'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
                success {
                    sh './jenkins/scripts/deliver.sh'
                    script {
                        JAR_FILE = sh(script: 'find . -name "./target/*.jar"', returnStdout: true).trim()
                    }
                }
            }
        }
        stage('Deploy') { 
            steps {
                script {
                    sshagent(credentials: ['ec2-user']) {
                        sh 'scp -o StrictHostKeyChecking=no -r ./target ec2-user@3.89.182.48:/home/ec2-user'
                        sh 'ssh -o StrictHostKeyChecking=no ec2-user@3.89.182.48 java -jar /home/ec2-user/${JAR_FILE}'
                        sleep(time: 1, unit: 'MINUTES')
                    }
                }
            }
        }
    }
}
